{
    "manifest_version": 3,
    "name": "SelahVie - Test",
    "description": "Chrome Extension for The Holy Bible",
    "version": "1.0",
    "action": {
        "default_icon": "SelahVie-logo.png"
    },
    "permissions": [
        "sidePanel",
        "tabs",
        "storage",
        "alarms",
        "scripting",
        "activeTab"
    ],
    "host_permissions": [
        "*://*/*",
        "https://*.google.com/*",
        "https://*.youtube.com/*",
        "https://*.mail.google.com/*",
        "https://*.play.google.com/*",
        "https://*.meet.google.com/*"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://*/*"
            ],
            "js": [
                "injectSidebar.js"
            ]
        }
    ],
    "background": {
        "service_worker": "background.js"
    },
    "web_accessible_resources": [
        {
            "resources": [
                "index.html",
                "injectSidebar.js"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ]
}